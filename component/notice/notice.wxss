
.notice{
  background-color: white;
  margin-top: 10rpx;
  padding:5rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border: 1px solid rgba(170, 170, 170, 1); 
  /* border-radius: 3%; */
  }
  .title{
    flex: 1;
    padding: 5rpx;
    border-bottom: 1rpx solid #AAAAAA;
    text-align: center;
    /* font-weight: bold; */
    line-height: 40rpx;
    font-size: 30rpx;
    color: #AAAAAA ;
  }
  .icon{
  flex:3;
  display: flex;
  justify-content: space-between;
  }
  .icon image{
    margin-top: 10rpx;
    border-radius: 50%;
    flex: 5;
    width:100rpx;
    height:100rpx;
  }
  .icon_text{
  font-size:40rpx;
  }
  .content{
  flex:5;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  }
  .more{
  flex:1;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  color:grey;
  }
  .part{
    display: flex;
  }
  .id{
    color:black;
    margin-top: 10%;
    flex:5;
    display: flex;
    flex-direction: column;
    height: 70%;
    font-size: 20rpx;
    justify-content: space-between;
  }
  ._id{
    color:grey;
    margin-left: 10rpx;
  }
  .name{
    margin-left: 10rpx;
  }
  